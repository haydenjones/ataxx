<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.jhayden.whim.ataxx.javafx.AtaxxSetupFx">
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
   <children>
      <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="ATAXX - JavaFX" />
      <Button fx:id="twoPlayerButton" onAction="#startTwoPlayerGame" prefWidth="200.0" text="Start 2-Player Game" />
      <Button fx:id="fourPlayerButton" onAction="#startFourPlayerGame" prefWidth="200.0" text="Start 4-Player Game" />
   </children>
</VBox>